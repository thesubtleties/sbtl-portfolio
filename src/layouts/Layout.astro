---
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Forward-thinking technology professional combining full-stack expertise with 12+ years of business leadership experience. Specializing in React, Python, and full-stack applications." />
    <meta name="keywords" content="full-stack developer, React, Python, Docker, PostgreSQL, Flask, Redux, TypeScript, software engineer, web development" />
    <meta name="author" content="Steven Glab" />
    
    <meta property="og:title" content="Steven Glab | Full-Stack Developer" />
    <meta property="og:description" content="Forward-thinking technology professional combining full-stack expertise with 12+ years of business leadership experience." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://sbtl.dev" />
    
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mr+Dafoe&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Square+Peg&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cantarell:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Antic&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+2:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Theme Fonts */
    --font-cormorant: 'Cormorant Garamond', serif;
    --font-mplus: 'M PLUS 2', sans-serif;
    --font-abeezee: 'ABeeZee', sans-serif;
    --font-mr-dafoe: 'Mr Dafoe', cursive;
    --font-antic: 'Antic', sans-serif;
    --font-crimson: 'Crimson Text', serif;
    --font-space-grotesk: 'Space Grotesk', sans-serif;
    --font-sacramento: 'Sacramento', cursive;
    --font-square-peg: 'Square Peg', cursive;
    --font-cantarell: 'Cantarell', sans-serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: var(--font-space-grotesk), Arial, sans-serif;
  }
</style>